<!--
Window head Transparent => <Window AllowsTransparency="True" Background="Transparent" WindowStyle="None"> 
Window radius => <Border CornerRadius="15" BorderThickness="2" Background="AntiqueWhite" Padding="6">        
-->
<Window x:Class="DogusBlok_MiniAracTakipSistemi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DogusBlok_MiniAracTakipSistemi"
        mc:Ignorable="d"
        Title="Araç Giriş Çıkış Sistemi" Height="450" Width="800">
        <Border Background="AntiqueWhite" Padding="5">
                <Grid>
                        <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="36" />
                                <ColumnDefinition Width="72" />
                                <ColumnDefinition Width="72" />
                                <ColumnDefinition Width="72" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="36" />
                        </Grid.ColumnDefinitions>
                
                        <Border Grid.Column="1" Grid.Row="0">
                            <Button HorizontalAlignment="Center" VerticalAlignment="Top" Background="Transparent" BorderThickness="0" Padding="10, 0">
                                    <StackPanel>
                                            <Image Source="icons/add100.png" Height="50" Width="50" />
                                            <Label Padding="0" HorizontalAlignment="Center" FontWeight="SemiBold">Ekle</Label>
                                    </StackPanel>
                            </Button>
                                
                        </Border>
                        <Border Grid.Column="2" Grid.Row="0">
                                <Button HorizontalAlignment="Center" VerticalAlignment="Top" Background="Transparent" BorderThickness="0" Padding="10, 0">
                                        <StackPanel>
                                                <Image Source="icons/cancel100.png" Height="50" Width="50" />
                                                <Label Padding="0" HorizontalAlignment="Center" FontWeight="SemiBold">Sil</Label>
                                        </StackPanel>
                                </Button>
                                
                        </Border>
                        <Border Grid.Column="3" Grid.Row="0">
                                <Button HorizontalAlignment="Center" VerticalAlignment="Top" Background="Transparent" BorderThickness="0" Padding="10, 0">
                                        <StackPanel>
                                                <Image Source="icons/undo100.png" Height="50" Width="50" />
                                                <Label Padding="0" HorizontalAlignment="Center" FontWeight="SemiBold">Geri Al</Label>
                                        </StackPanel>
                                </Button>
                                
                        </Border>
                        <Border Grid.Column="4" Grid.Row="0">
                                <TextBox VerticalAlignment="Center" HorizontalAlignment="Right" Width="175" FontSize="20"></TextBox>
                        </Border>
                        <Border Grid.Column="5" Grid.Row="0">
                                <Button HorizontalAlignment="Left" VerticalAlignment="Top" Background="Transparent" BorderThickness="0" Padding="10, 0">
                                        <StackPanel>
                                                <Image Source="icons/search100.png" Height="50" Width="50" />
                                                <Label Padding="0" HorizontalAlignment="Center" FontWeight="SemiBold">Ara</Label>
                                        </StackPanel>
                                </Button>
                        </Border>
                        <Border Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="5" >
                                <DataGrid></DataGrid>
                        </Border>
                        
                </Grid>
        </Border>
</Window>
